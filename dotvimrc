set nocompatible
let mapleader=","

set laststatus=2 

syntax enable
filetype plugin on
filetype plugin indent on

set showcmd
set showmode
set backspace=indent,eol,start

set hidden

set wildmenu
set wildmode=list:longest

set ignorecase 
set smartcase
set hlsearch
set incsearch

set nowrap
set scrolloff=3

set title

set nobackup
set nowritebackup
set directory=$HOME/.vom/tmp//,.

set number

map <Leader>t :NERDTree
